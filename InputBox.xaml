<Window x:Class="DesktopPlus.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc.InputDialogTitle}" Width="320" Height="180"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1A1D23"
        FontFamily="Segoe UI">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="InputBoxResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource DialogSurface}"
                BorderBrush="{StaticResource DialogBorder}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="LblMessage"
                           Grid.Row="0"
                           Foreground="{StaticResource DialogText}"
                           FontSize="14"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="TxtInput"
                         Grid.Row="1"
                         Background="{StaticResource DialogInput}"
                         BorderBrush="{StaticResource DialogInputBorder}"
                         BorderThickness="1"
                         Foreground="{StaticResource DialogText}"
                         FontSize="14"
                         Padding="8,6"/>
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button Content="{DynamicResource Loc.InputDialogOk}" Width="74" Style="{StaticResource DialogButtonStyle}" Click="BtnOK_Click"/>
                    <Button Content="{DynamicResource Loc.InputDialogCancel}" Width="94" Margin="10,0,0,0" Style="{StaticResource DialogButtonStyle}" Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
