<Window x:Class="DesktopPlus.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eingabe" Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#222">

    <Grid>
        <Border Background="#333" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock x:Name="LblMessage" Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                <TextBox x:Name="TxtInput" Background="#444" Foreground="White" FontSize="14" Padding="5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="OK" Width="70" Click="BtnOK_Click"/>
                    <Button Content="Abbrechen" Width="70" Margin="10,0,0,0" Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
