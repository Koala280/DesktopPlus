<Window x:Class="DesktopPlus.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc.InputDialogTitle}" Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1A1D23"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="DialogSurface" Color="#242833"/>
        <SolidColorBrush x:Key="DialogBorder" Color="#323844"/>
        <SolidColorBrush x:Key="DialogInput" Color="#1F242E"/>
        <SolidColorBrush x:Key="DialogInputBorder" Color="#2D3442"/>
        <SolidColorBrush x:Key="DialogText" Color="#F2F5FA"/>
        <SolidColorBrush x:Key="DialogMuted" Color="#A7B0C0"/>
        <SolidColorBrush x:Key="DialogButton" Color="#2A303A"/>
        <SolidColorBrush x:Key="DialogButtonBorder" Color="#353C49"/>

        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource DialogText}"/>
            <Setter Property="Background" Value="{StaticResource DialogButton}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DialogButtonBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E3440"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#465064"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353C48"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="{StaticResource DialogSurface}"
                BorderBrush="{StaticResource DialogBorder}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="12">
            <StackPanel>
                <TextBlock x:Name="LblMessage" Foreground="{StaticResource DialogText}" FontSize="14" Margin="0,0,0,10"/>
                <TextBox x:Name="TxtInput"
                         Background="{StaticResource DialogInput}"
                         BorderBrush="{StaticResource DialogInputBorder}"
                         BorderThickness="1"
                         Foreground="{StaticResource DialogText}"
                         FontSize="14"
                         Padding="6"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="{DynamicResource Loc.InputDialogOk}" Width="70" Style="{StaticResource DialogButtonStyle}" Click="BtnOK_Click"/>
                    <Button Content="{DynamicResource Loc.InputDialogCancel}" Width="90" Margin="10,0,0,0" Style="{StaticResource DialogButtonStyle}" Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
