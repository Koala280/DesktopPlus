<Window x:Class="DesktopPlus.DesktopPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="DesktopPanel" Height="450" Width="800" WindowStyle="None" 
        ResizeMode="CanResizeWithGrip" Background="#00121212" AllowsTransparency="True">
    <Window.Effect>
        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
    </Window.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Oberer Balken mit Steuerungselementen -->
        <Border Grid.Row="0" Background="#CC1E1E1E" CornerRadius="10,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/> <!-- NEU: Eingefügte Spalte für Suchleiste -->
                    <ColumnDefinition Width="30"/> <!-- GEÄNDERT: Spalte für Minimieren (vormals Grid.Column 4) -->
                    <ColumnDefinition Width="40"/> <!-- GEÄNDERT: Spalte für Schließen (vormals Grid.Column 5) -->
                </Grid.ColumnDefinitions>
                <!-- Menü-Button -->
                <Button Grid.Column="0"
                        Content="⠿"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Menü öffnen"
                        Cursor="Hand"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        PreviewMouseLeftButtonDown="MoveButton_MouseLeftButtonDown">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Einstellungen-Button -->
                <Button Grid.Column="1"
                        Content="⛭"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Einstellungen"
                        Cursor="Hand"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        Click="BurgerMenu_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Leerer Zwischenraum (Grid.Column 2) -->
                <!-- Titel des Panels / aktueller Ordnername -->
                <TextBlock x:Name="PanelTitle"
                           Grid.Column="3"
                           Text="DesktopPanel"
                           Foreground="White"
                           FontSize="14"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"/>
                <!-- Suchleiste für Filterung -->
                <TextBox x:Name="SearchBox"
                         Grid.Column="4"
                         Margin="5"
                         VerticalAlignment="Center"
                         Padding="8,4"
                         Background="Transparent"
                         BorderBrush="#66FFFFFF"
                         BorderThickness="1"
                         Foreground="#CCFFFFFF"
                         CaretBrush="#CCFFFFFF"
                         SelectionBrush="#40FFFFFF"
                         TextChanged="SearchBox_TextChanged"/>
                <!-- Ein-/Ausklappen-Button -->
                <Button Grid.Column="5"
                        Content="–"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Inhalt ein-/ausklappen"
                        Cursor="Hand"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Click="Collapse_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Schließen-Button -->
                <Button Grid.Column="6"
                        Content="✖"
                        FontSize="16"
                        Foreground="White"
                        ToolTip="Schließen"
                        Cursor="Hand"
                        Margin="5,0,5,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Click="CloseWindow_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
        <!-- Unterer Bereich: Inhalt des Ordners -->
        <Border Grid.Row="1"
                Margin="5"
                Padding="5"
                CornerRadius="0,0,10,10"
                SnapsToDevicePixels="True"
                ClipToBounds="True">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#E6101010" Offset="0"/>
                    <GradientStop Color="#CC080808" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer Name="ContentContainer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">
                <!-- Darstellungsfläche für Dateien/Ordner als WrapPanel -->
                <ListBox Name="FileList"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ScrollViewer.CanContentScroll="False"
                         MouseDoubleClick="FileList_MouseDoubleClick">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       IsItemsHost="True"
                                       Margin="5"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <!-- Darstellung eines Eintrags (Datei/Ordner) -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="10" Width="80" Cursor="Hand">
                                <Image Source="{Binding Icon}" Width="{Binding IconWidth}" Height="{Binding IconHeight}"/>
                                <TextBlock Text="{Binding Name}" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
