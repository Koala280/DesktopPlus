<Window x:Class="DesktopPlus.PanelSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" Width="300" Height="200" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize" Background="#222">
    <Grid>
        <Border Background="#333" CornerRadius="8" Padding="10">
            <StackPanel>
                <TextBlock Text="Name" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtName" Background="#444" Foreground="White" Padding="5"/>
                <CheckBox x:Name="ChkHover" Content="Per MouseHover Ã¶ffnen" Foreground="White" Margin="0,10,0,0"/>
                <CheckBox x:Name="ChkMinimize" Content="Minimize-Button anzeigen" Foreground="White" Margin="0,5,0,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <Button Content="OK" Width="70" Margin="0,0,5,0" Click="Ok_Click"/>
                    <Button Content="Abbrechen" Width="70" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
