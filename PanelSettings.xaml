<Window x:Class="DesktopPlus.PanelSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="{DynamicResource Loc.PanelSettingsTitle}"
        Height="620"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#1A1D23"
        Foreground="#F2F5FA"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="PanelSettingsResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            CornerRadius="12"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="0"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#1F242C"
                BorderBrush="#2B313D"
                BorderThickness="1,1,1,0"
                CornerRadius="12,12,0,0"
                Padding="8,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                shell:WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid Height="36">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image Width="14"
                           Height="14"
                           Margin="2,0,6,0"
                           Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,2,0">
                    <Button Style="{StaticResource TitleBarCloseButton}"
                            Click="Close_Click"
                            ToolTip="{DynamicResource Loc.PanelCloseTooltip}"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True">
                        <Path Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1.5"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Data="M 0 0 L 10 10 M 10 0 L 0 10"
                              Width="10" Height="10"
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Padding="18"
                Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource CardBorder}"
                BorderThickness="1"
                CornerRadius="0,0,12,12">
            <StackPanel>
                <TextBlock x:Name="SettingsHeading"
                           Text="{DynamicResource Loc.PanelSettingsTitle}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,2"/>
                <TextBlock x:Name="SettingsModeHint"
                           Foreground="{StaticResource Muted}"
                           FontSize="12"
                           Margin="0,0,0,6"
                           Visibility="Collapsed"/>

                <!-- Section: Allgemein (Name + Preset) -->
                <Border Background="#1F242C"
                        BorderBrush="#2B313D"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="14,10"
                        Margin="0,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="NameLabel" Grid.Row="0" Grid.Column="0"
                                   Text="{DynamicResource Loc.PanelSettingsName}"
                                   Foreground="{StaticResource Muted}" FontSize="12"/>
                        <TextBox x:Name="NameInput"
                                 Grid.Row="1" Grid.Column="0"
                                 Height="34"
                                 Style="{StaticResource FlatTextBox}"
                                 Margin="0,4,0,0"/>

                        <TextBlock x:Name="PresetLabel" Grid.Row="0" Grid.Column="2"
                                   Text="{DynamicResource Loc.PanelSettingsPreset}"
                                   Foreground="{StaticResource Muted}" FontSize="12"/>
                        <StackPanel x:Name="PresetSection" Grid.Row="1" Grid.Column="2"
                                    Margin="0,4,0,0">
                            <ComboBox x:Name="PresetSelect"
                                      Height="34"
                                      Style="{StaticResource FlatCombo}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Name"
                                      SelectionChanged="PresetSelect_SelectionChanged"/>
                        </StackPanel>
                        <Button x:Name="ResetPresetToStandardButton"
                                Grid.Row="2" Grid.Column="2"
                                Content="{DynamicResource Loc.PanelSettingsResetToStandard}"
                                Style="{StaticResource GhostButton}"
                                Padding="10,5"
                                Margin="0,6,0,0"
                                HorizontalAlignment="Stretch"
                                Click="ResetPresetToStandardButton_Click"/>
                    </Grid>
                </Border>

                <!-- Section: Ordner -->
                <Border x:Name="FolderSection"
                        Background="#1F242C"
                        BorderBrush="#2B313D"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="14,10"
                        Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock x:Name="DefaultFolderLabel"
                                   Text="{DynamicResource Loc.PanelSettingsDefaultFolder}"
                                   Foreground="{StaticResource Muted}" FontSize="12"/>
                        <StackPanel x:Name="DefaultFolderRow" Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock x:Name="FolderPathLabel"
                                       Text="{DynamicResource Loc.PanelSettingsFolderUnset}"
                                       Foreground="{StaticResource TextPrimary}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="370"/>
                            <Button x:Name="ChangeFolderButton"
                                    Content="{DynamicResource Loc.PanelSettingsChange}"
                                    Padding="10,5"
                                    Margin="8,0,0,0"
                                    Style="{StaticResource GhostButton}"
                                    Click="ChangeFolder_Click"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource Loc.PanelSettingsFolderAction}"
                                   Foreground="{StaticResource Muted}" FontSize="12"
                                   Margin="0,10,0,0"/>
                        <ComboBox x:Name="FolderActionSelect"
                                  Height="34"
                                  Style="{StaticResource FlatCombo}"
                                  Margin="0,4,0,0">
                            <ComboBoxItem Content="{DynamicResource Loc.PanelSettingsOpenInternal}" Tag="internal"/>
                            <ComboBoxItem Content="{DynamicResource Loc.PanelSettingsOpenExternal}" Tag="external"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- Section: Anzeige (Visibility toggles) -->
                <Border Background="#1F242C"
                        BorderBrush="#2B313D"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="14,10"
                        Margin="0,8,0,0">
                    <StackPanel>
                        <CheckBox x:Name="HiddenToggle"
                                  Content="{DynamicResource Loc.PanelSettingsShowHidden}"
                                  Style="{StaticResource AccentCheckBox}"/>
                        <CheckBox x:Name="FileExtensionsToggle"
                                  Content="{DynamicResource Loc.PanelSettingsShowFileExtensions}"
                                  Style="{StaticResource AccentCheckBox}"
                                  Margin="0,8,0,0"/>
                        <CheckBox x:Name="SettingsButtonToggle"
                                  Content="{DynamicResource Loc.PanelSettingsShowSettingsButton}"
                                  Style="{StaticResource AccentCheckBox}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Section: Verhalten (Movement, Search, Hover) -->
                <Border Background="#1F242C"
                        BorderBrush="#2B313D"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="14,10"
                        Margin="0,8,0,0">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="{DynamicResource Loc.PanelSettingsMovement}"
                                       Foreground="{StaticResource Muted}" FontSize="12"/>
                            <ComboBox x:Name="MovementModeSelect"
                                      Grid.Row="1" Grid.Column="0"
                                      Height="34"
                                      Style="{StaticResource FlatCombo}"
                                      Margin="0,4,0,0">
                                <ComboBoxItem Content="{DynamicResource Loc.MovementTitlebar}" Tag="titlebar"/>
                                <ComboBoxItem Content="{DynamicResource Loc.MovementButton}" Tag="button"/>
                                <ComboBoxItem Content="{DynamicResource Loc.MovementLocked}" Tag="locked"/>
                            </ComboBox>

                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="{DynamicResource Loc.PanelSettingsSearchVisibility}"
                                       Foreground="{StaticResource Muted}" FontSize="12"/>
                            <ComboBox x:Name="SearchVisibilitySelect"
                                      Grid.Row="1" Grid.Column="2"
                                      Height="34"
                                      Style="{StaticResource FlatCombo}"
                                      Margin="0,4,0,0">
                                <ComboBoxItem Content="{DynamicResource Loc.PanelSettingsSearchAlways}" Tag="always"/>
                                <ComboBoxItem Content="{DynamicResource Loc.PanelSettingsSearchExpandedOnly}" Tag="expanded"/>
                                <ComboBoxItem Content="{DynamicResource Loc.PanelSettingsSearchHidden}" Tag="hidden"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="HoverToggle"
                                      Grid.Column="0"
                                      Content="{DynamicResource Loc.PanelSettingsExpandOnHover}"
                                      Style="{StaticResource AccentCheckBox}"
                                      VerticalAlignment="Center"/>
                            <Button x:Name="FitContentButton"
                                    Grid.Column="2"
                                    Height="34"
                                    Content="{DynamicResource Loc.PanelSettingsFitContent}"
                                    Style="{StaticResource GhostButton}"
                                    Click="FitContent_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</Window>
