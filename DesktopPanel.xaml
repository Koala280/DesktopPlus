<Window x:Class="DesktopPlus.DesktopPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc.PanelWindowTitle}"
        Height="480"
        Width="820"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        AllowDrop="True"
        Drop="Window_Drop"
        PreviewDragOver="Window_DragOver"
        PreviewMouseWheel="Window_PreviewMouseWheel">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DesktopPanelResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border x:Name="PanelChrome"
            Background="Transparent"
            BorderBrush="{StaticResource PanelBorder}"
            BorderThickness="1"
            CornerRadius="16"
            Padding="1"
            SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect x:Name="PanelShadow"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.35"/>
        </Border.Effect>

        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="HeaderRow" Height="46"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="HeaderBar"
                    Grid.Row="0"
                    Background="{StaticResource PanelSurfaceRaised}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="14,14,0,0"
                    Padding="12,0"
                    MouseLeftButtonDown="HeaderBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="MoveButton"
                            Grid.Column="0"
                            Style="{StaticResource HeaderIconButton}"
                            ToolTip="{DynamicResource Loc.PanelMoveTooltip}"
                            Visibility="Collapsed"
                            Margin="0,0,6,0"
                            PreviewMouseLeftButtonDown="MoveButton_MouseLeftButtonDown">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <Grid Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M2,5 L12,5 M2,9 L12,9"
                                              Stroke="{TemplateBinding Foreground}"
                                              StrokeThickness="1.5"
                                              StrokeStartLineCap="Round"
                                              StrokeEndLineCap="Round"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#2E3440"/>
                                        <Setter TargetName="Bd" Property="BorderBrush" Value="#465064"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="SettingsButton"
                            Grid.Column="1"
                            Style="{StaticResource HeaderIconButton}"
                            ToolTip="{DynamicResource Loc.PanelSettingsTooltip}"
                            Click="BurgerMenu_Click">
                        <TextBlock Text="&#xE713;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>

                    <TextBlock x:Name="PanelTitle"
                               Grid.Column="3"
                               Text="{DynamicResource Loc.PanelDefaultTitle}"
                               Foreground="{StaticResource PanelText}"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"
                               Opacity="0.95"/>

                    <Border Grid.Column="4"
                            Background="#1A202A"
                            BorderBrush="{StaticResource PanelBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12,0"
                            VerticalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchBox"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="{StaticResource PanelText}"
                                     FontSize="13"
                                     Padding="0"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,0,1"/>
                                                        <TextBlock x:Name="Placeholder"
                                                                   Text="{DynamicResource Loc.PanelSearchPlaceholder}"
                                                                   Foreground="{StaticResource PanelMuted}"
                                                                   Margin="0,0,0,1"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="Collapsed"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="6"
                            Style="{StaticResource MinimalHeaderButton}"
                            ToolTip="{DynamicResource Loc.PanelCollapseTooltip}"
                            Click="Collapse_Click">
                        <Path Data="M4,10 L16,10"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1.5"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Width="12" Height="12"
                              Stretch="Uniform"/>
                    </Button>

                    <Button Grid.Column="7"
                            Style="{StaticResource MinimalHeaderButton}"
                            ToolTip="{DynamicResource Loc.PanelCloseTooltip}"
                            Click="CloseWindow_Click">
                        <Path Data="M4,4 L12,12 M12,4 L4,12"
                              Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                              StrokeThickness="1.5"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"
                              Width="10" Height="10"
                              Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <Border x:Name="ContentFrame"
                    Grid.Row="1"
                    Background="{StaticResource PanelSurfaceInset}"
                    CornerRadius="0,0,14,14"
                    Padding="10,8,10,10">
                <Grid>
                    <Border x:Name="DropZone"
                            Background="#1AFFFFFF"
                            BorderBrush="{StaticResource PanelBorder}"
                            BorderThickness="1.5"
                            CornerRadius="9"
                            Margin="4"
                            Visibility="Visible">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderBrush" Value="{StaticResource PanelBorder}"/>
                            </Style>
                        </Border.Style>
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <Path Data="M12,2 L12,14 M7,9 L12,14 L17,9 M4,18 L20,18"
                                  Stroke="{StaticResource PanelMuted}"
                                  StrokeThickness="1.5"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Width="40" Height="40"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,12"/>
                            <TextBlock Text="{DynamicResource Loc.PanelDropHint}"
                                       Foreground="{StaticResource PanelMuted}"
                                       FontSize="13"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="280"/>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Name="ContentContainer"
                                  Margin="2,0,2,2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  PreviewMouseWheel="ContentContainer_PreviewMouseWheel"
                                  SizeChanged="ContentContainer_SizeChanged">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ThinScrollBar}"/>
                        </ScrollViewer.Resources>
                        <Grid x:Name="SelectionHost">
                            <ListBox Name="FileList"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FocusVisualStyle="{x:Null}"
                                     Foreground="{StaticResource PanelText}"
                                     ItemContainerStyle="{StaticResource PanelFileListItemStyle}"
                                     SelectionMode="Extended"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                     ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                     ScrollViewer.CanContentScroll="False"
                                     PreviewMouseLeftButtonDown="FileList_PreviewMouseLeftButtonDown"
                                     PreviewMouseLeftButtonUp="FileList_PreviewMouseLeftButtonUp"
                                     LostMouseCapture="FileList_LostMouseCapture"
                                     MouseMove="FileList_MouseMove"
                                     AllowDrop="True"
                                     Drop="FileList_Drop"
                                     MouseDoubleClick="FileList_MouseDoubleClick">
                                <ListBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel x:Name="FileWrapPanel"
                                                   Orientation="Horizontal"
                                                   IsItemsHost="True"
                                                   Margin="4"/>
                                    </ItemsPanelTemplate>
                                </ListBox.ItemsPanel>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="6"
                                                    Width="90"
                                                    Cursor="Hand">
                                            <Image Source="{Binding Icon}"
                                                   Width="{Binding IconWidth}"
                                                   Height="{Binding IconHeight}"/>
                                            <TextBlock Text="{Binding Name}"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Margin="0,5,0,0"
                                                       Foreground="{StaticResource PanelText}"
                                                       FontSize="11"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Canvas x:Name="SelectionCanvas"
                                    IsHitTestVisible="False"
                                    ClipToBounds="True">
                                <Rectangle x:Name="SelectionRubberBand"
                                           Visibility="Collapsed"
                                           RadiusX="5"
                                           RadiusY="5"
                                           Stroke="#6F8EFF"
                                           StrokeThickness="1"
                                           Fill="#224A6788"/>
                            </Canvas>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
