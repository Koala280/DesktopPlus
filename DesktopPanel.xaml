<Window x:Class="DesktopPlus.DesktopPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Loc.PanelWindowTitle}"
        Height="480"
        Width="820"
        FontFamily="Segoe UI"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        AllowDrop="True"
        Drop="Window_Drop"
        PreviewDragOver="Window_DragOver">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelSurface" Color="#242833"/>
        <SolidColorBrush x:Key="PanelSurfaceRaised" Color="#2A303B"/>
        <SolidColorBrush x:Key="PanelSurfaceInset" Color="#1E232B"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#343B48"/>
        <SolidColorBrush x:Key="PanelText" Color="#F2F5FA"/>
        <SolidColorBrush x:Key="PanelMuted" Color="#A7B0C0"/>
        <SolidColorBrush x:Key="PanelButtonBg" Color="#2A303A"/>
        <SolidColorBrush x:Key="PanelButtonBorder" Color="#39414D"/>

        <Style x:Key="HeaderIconButton" TargetType="Button">
            <Setter Property="Width" Value="34"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Background" Value="{StaticResource PanelButtonBg}"/>
            <Setter Property="Foreground" Value="{StaticResource PanelText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelButtonBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2E3440"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#465064"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#353C48"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderSmallButton" TargetType="Button" BasedOn="{StaticResource HeaderIconButton}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Border x:Name="PanelChrome"
            Background="#E6242833"
            CornerRadius="16"
            Padding="8">
        <Border.Effect>
            <DropShadowEffect x:Name="PanelShadow"
                              BlurRadius="18"
                              ShadowDepth="0"
                              Opacity="0.35"/>
        </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="52"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

        <Border x:Name="HeaderBar"
                Grid.Row="0"
                Background="{StaticResource PanelSurfaceRaised}"
                BorderBrush="{StaticResource PanelBorder}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="12,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button Style="{StaticResource HeaderIconButton}"
                                ToolTip="{DynamicResource Loc.PanelMoveTooltip}"
                                Margin="0,0,6,0"
                                PreviewMouseLeftButtonDown="MoveButton_MouseLeftButtonDown">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                        <StackPanel Margin="8,9,8,9" VerticalAlignment="Center">
                                            <Rectangle Height="2" Fill="{TemplateBinding Foreground}" RadiusX="1" RadiusY="1" Margin="0,0,0,2"/>
                                            <Rectangle Height="2" Fill="{TemplateBinding Foreground}" RadiusX="1" RadiusY="1" Margin="0,0,0,2"/>
                                            <Rectangle Height="2" Fill="{TemplateBinding Foreground}" RadiusX="1" RadiusY="1"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Style="{StaticResource HeaderIconButton}"
                                ToolTip="{DynamicResource Loc.PanelSettingsTooltip}"
                                Click="BurgerMenu_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                        <Grid Width="16" Height="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Path Data="M3,8 L13,8 M8,3 L8,13"
                                                  Stroke="{TemplateBinding Foreground}"
                                                  StrokeThickness="2"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="PanelTitle"
                               Grid.Column="3"
                               Text="{DynamicResource Loc.PanelDefaultTitle}"
                               Foreground="{StaticResource PanelText}"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"
                               Opacity="0.9"/>

                    <Border Grid.Column="4"
                            Background="{StaticResource PanelSurfaceInset}"
                            BorderBrush="{StaticResource PanelBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12,0"
                            VerticalAlignment="Center">
                        <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource PanelText}"
                             FontSize="13"
                             Padding="0"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,0,1"/>
                                                        <TextBlock x:Name="Placeholder"
                                                                   Text="{DynamicResource Loc.PanelSearchPlaceholder}"
                                                                   Foreground="{StaticResource PanelMuted}"
                                                                   Margin="0,0,0,1"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   Visibility="Collapsed"/>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                                            <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <Button Grid.Column="5"
                            Style="{StaticResource HeaderSmallButton}"
                            Content="-"
                            FontSize="16"
                            ToolTip="{DynamicResource Loc.PanelCollapseTooltip}"
                            Click="Collapse_Click"/>

                    <Button Grid.Column="6"
                            Style="{StaticResource HeaderSmallButton}"
                            Content="x"
                            FontSize="13"
                            ToolTip="{DynamicResource Loc.PanelCloseTooltip}"
                            Click="CloseWindow_Click"/>
                </Grid>
            </Border>

            <Border x:Name="ContentFrame"
                    Grid.Row="1"
                    Background="{StaticResource PanelSurfaceInset}"
                    BorderBrush="{StaticResource PanelBorder}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="8">
                <ScrollViewer Name="ContentContainer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <ListBox Name="FileList"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource PanelText}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="False"
                             MouseDoubleClick="FileList_MouseDoubleClick">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           IsItemsHost="True"
                                           Margin="5"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10"
                                            Width="90"
                                            Cursor="Hand">
                                    <Image Source="{Binding Icon}"
                                           Width="{Binding IconWidth}"
                                           Height="{Binding IconHeight}"/>
                                    <TextBlock Text="{Binding Name}"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               Margin="0,5,0,0"
                                               Foreground="{StaticResource PanelText}"
                                               FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
