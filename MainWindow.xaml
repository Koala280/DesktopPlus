                                              Content="{DynamicResource Loc.AutoSortToggle}"
                                              Style="{StaticResource AccentCheckBox}"
                                              Margin="0,12,0,0"
                                              Checked="AutoSortToggle_Changed"
                                              Unchecked="AutoSortToggle_Changed"/>

                                    <TextBlock x:Name="AutoSortStatusText"
                                               FontSize="12"
                                               Foreground="{StaticResource Primary}"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="{StaticResource CardBackground}"
                                        CornerRadius="12"
                                        Padding="14"
                                        BorderBrush="{StaticResource CardBorder}"
                                        BorderThickness="1"
                                        Margin="0,0,8,0">
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource Loc.AutoSortBuiltInTitle}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <ScrollViewer Margin="0,8,0,0"
                                                      HorizontalScrollBarVisibility="Auto"
                                                      VerticalScrollBarVisibility="Auto"
                                                      CanContentScroll="False">
                                            <StackPanel Grid.IsSharedSizeScope="True">
                                                <Grid MinWidth="870" Margin="0,0,0,6">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" MinWidth="200" SharedSizeGroup="AutoSortTypeColumn"/>
                                                        <ColumnDefinition Width="Auto" MinWidth="460" SharedSizeGroup="AutoSortExtensionsColumn"/>
                                                        <ColumnDefinition Width="Auto" MinWidth="210" SharedSizeGroup="AutoSortTargetColumn"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{DynamicResource Loc.AutoSortRuleType}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource Muted}"/>
                                                    <TextBlock Grid.Column="1"
                                                               Text="{DynamicResource Loc.AutoSortRuleExtensions}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource Muted}"/>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{DynamicResource Loc.AutoSortRuleTarget}"
                                                               FontSize="11"
                                                               Foreground="{StaticResource Muted}"/>
                                                </Grid>
                                                <ListBox x:Name="AutoSortBuiltInRulesList"
                                                         Background="Transparent"
                                                         BorderThickness="0"
                                                         Foreground="White"
                                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                                         ScrollViewer.CanContentScroll="False">
                                                    <ListBox.ItemContainerStyle>
                                                        <Style TargetType="ListBoxItem">
                                                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                            <Setter Property="Padding" Value="0"/>
                                                            <Setter Property="Margin" Value="0,0,0,8"/>
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                            <Setter Property="Focusable" Value="False"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListBoxItem">
                                                                        <Border Background="Transparent"
                                                                                CornerRadius="10"
                                                                                SnapsToDevicePixels="True">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListBox.ItemContainerStyle>
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border x:Name="BuiltInRuleCard"
                                                                    Background="#1E232B"
                                                                    CornerRadius="10"
                                                                    BorderBrush="{StaticResource CardBorder}"
                                                                    BorderThickness="1"
                                                                    Padding="10">
                                                                <Grid MinWidth="850">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" MinWidth="200" SharedSizeGroup="AutoSortTypeColumn"/>
                                                                        <ColumnDefinition Width="Auto" MinWidth="440" SharedSizeGroup="AutoSortExtensionsColumn"/>
                                                                        <ColumnDefinition Width="Auto" MinWidth="210" SharedSizeGroup="AutoSortTargetColumn"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <CheckBox Grid.Column="0"
                                                                              IsChecked="{Binding Enabled}"
                                                                              Content="{Binding DisplayName}"
                                                                              Tag="{Binding RuleId}"
                                                                              Style="{StaticResource AccentCheckBox}"
                                                                              Margin="0"
                                                                              VerticalAlignment="Center"
                                                                              Checked="AutoSortRuleEnabled_Changed"
                                                                              Unchecked="AutoSortRuleEnabled_Changed"/>
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding ExtensionsSummary}"
                                                                               Foreground="{StaticResource Muted}"
                                                                               FontSize="12"
                                                                               VerticalAlignment="Center"
                                                                               Margin="8,0,8,0"
                                                                               TextWrapping="NoWrap"/>
                                                                    <TextBox Grid.Column="2"
                                                                             Style="{StaticResource FlatTextBox}"
                                                                             Height="32"
                                                                             Text="{Binding TargetPanelName}"
                                                                             Tag="{Binding RuleId}"
                                                                             Loaded="AutoSortTargetTextBox_Loaded"
                                                                             GotKeyboardFocus="AutoSortTargetTextBox_GotKeyboardFocus"
                                                                             LostKeyboardFocus="AutoSortTargetTextBox_LostKeyboardFocus"
                                                                             PreviewKeyDown="AutoSortTargetTextBox_PreviewKeyDown"
                                                                             TextChanged="AutoSortRuleTarget_TextChanged"/>
                                                                </Grid>
                                                            </Border>
                                                            <DataTemplate.Triggers>
                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                                                             Value="True">
                                                                    <Setter TargetName="BuiltInRuleCard" Property="Background" Value="#25324A"/>
                                                                    <Setter TargetName="BuiltInRuleCard" Property="BorderBrush" Value="#5771A1"/>
                                                                </DataTrigger>
                                                            </DataTemplate.Triggers>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1"
                                        Background="{StaticResource CardBackground}"
                                        CornerRadius="12"
                                        Padding="14"
                                        BorderBrush="{StaticResource CardBorder}"
                                        BorderThickness="1"
                                        Margin="8,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource Loc.AutoSortCustomTitle}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="White"/>
                                        <TextBlock Text="{DynamicResource Loc.AutoSortCustomHint}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource Muted}"
                                                   Margin="0,6,0,0"/>

                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{DynamicResource Loc.AutoSortCustomExtensionsLabel}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource Muted}"
                                                           Margin="0,0,0,4"/>
                                                <TextBox x:Name="AutoSortCustomExtensionsInput"
                                                         Height="32"
                                                         Style="{StaticResource FlatTextBox}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                <TextBlock Text="{DynamicResource Loc.AutoSortCustomTargetLabel}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource Muted}"
                                                           Margin="0,0,0,4"/>
                                                <TextBox x:Name="AutoSortCustomTargetInput"
                                                         Height="32"
                                                         Style="{StaticResource FlatTextBox}"
                                                         Loaded="AutoSortTargetTextBox_Loaded"
                                                         GotKeyboardFocus="AutoSortTargetTextBox_GotKeyboardFocus"
                                                         LostKeyboardFocus="AutoSortTargetTextBox_LostKeyboardFocus"
                                                         PreviewKeyDown="AutoSortTargetTextBox_PreviewKeyDown"
                                                         TextChanged="AutoSortCustomTargetInput_TextChanged"/>
                                            </StackPanel>
                                            <Button Grid.Column="2"
                                                    Content="{DynamicResource Loc.AutoSortCustomAdd}"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Margin="8,18,0,0"
                                                    Padding="12,6"
                                                    Click="AddCustomSortRule_Click"/>
                                        </Grid>

                                        <Grid Margin="0,12,0,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="170"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       Text="{DynamicResource Loc.AutoSortRuleType}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Muted}"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{DynamicResource Loc.AutoSortRuleExtensions}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Muted}"/>
                                            <TextBlock Grid.Column="2"
                                                       Text="{DynamicResource Loc.AutoSortRuleTarget}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource Muted}"/>
                                        </Grid>

                                        <ListBox x:Name="AutoSortCustomRulesList"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="White">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                    <Setter Property="Focusable" Value="False"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                <Border Background="Transparent"
                                                                        CornerRadius="10"
                                                                        SnapsToDevicePixels="True">
                                                                    <ContentPresenter/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Border x:Name="CustomRuleCard"
                                                            Background="#1E232B"
                                                            CornerRadius="10"
                                                            BorderBrush="{StaticResource CardBorder}"
                                                            BorderThickness="1"
                                                            Padding="10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="170"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="180"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <CheckBox Grid.Column="0"
                                                                      IsChecked="{Binding Enabled}"
                                                                      Content="{Binding DisplayName}"
                                                                      Tag="{Binding RuleId}"
                                                                      Style="{StaticResource AccentCheckBox}"
                                                                      Margin="0"
                                                                      VerticalAlignment="Center"
                                                                      Checked="AutoSortRuleEnabled_Changed"
                                                                      Unchecked="AutoSortRuleEnabled_Changed"/>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ExtensionsSummary}"
                                                                       Foreground="{StaticResource Muted}"
                                                                       FontSize="12"
                                                                       VerticalAlignment="Center"
                                                                       Margin="8,0,8,0"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                            <TextBox Grid.Column="2"
                                                                     Style="{StaticResource FlatTextBox}"
                                                                     Height="32"
                                                                     Text="{Binding TargetPanelName}"
                                                                     Tag="{Binding RuleId}"
                                                                     Loaded="AutoSortTargetTextBox_Loaded"
                                                                     GotKeyboardFocus="AutoSortTargetTextBox_GotKeyboardFocus"
                                                                     LostKeyboardFocus="AutoSortTargetTextBox_LostKeyboardFocus"
                                                                     PreviewKeyDown="AutoSortTargetTextBox_PreviewKeyDown"
                                                                     TextChanged="AutoSortRuleTarget_TextChanged"/>
                                                            <Button Grid.Column="3"
                                                                    Content="{DynamicResource Loc.AutoSortRemove}"
                                                                    Style="{StaticResource GhostButton}"
                                                                    Margin="8,0,0,0"
                                                                    Padding="10,6"
                                                                    Tag="{Binding RuleId}"
                                                                    Click="RemoveCustomSortRule_Click"/>
                                                        </Grid>
                                                    </Border>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsMouseOver}"
                                                                     Value="True">
                                                            <Setter TargetName="CustomRuleCard" Property="Background" Value="#25324A"/>
                                                            <Setter TargetName="CustomRuleCard" Property="BorderBrush" Value="#5771A1"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="{DynamicResource Loc.TabShortcuts}">
                        <StackPanel Margin="0,12,0,0"
                                    PreviewMouseLeftButtonDown="ShortcutsTabRoot_PreviewMouseLeftButtonDown">
                            <Border Background="{StaticResource CardBackground}"
                                    CornerRadius="12"
                                    Padding="16"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource Loc.ShortcutsTitle}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <TextBlock Text="{DynamicResource Loc.ShortcutsDesc}"
                                               FontSize="12"
                                               Foreground="{StaticResource Muted}"
                                               Margin="0,8,0,0"/>

                                    <TextBlock Text="{DynamicResource Loc.ShortcutsGlobalTitle}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               Margin="0,14,0,6"/>
                                    <TextBlock Text="{DynamicResource Loc.ShortcutsGlobalHint}"
                                               FontSize="11"
                                               Foreground="{StaticResource Muted}"/>
                                    <Grid Margin="0,8,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="170"/>
                                            <ColumnDefinition Width="190"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{DynamicResource Loc.ShortcutsInputHide}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   Margin="0,2,8,2"/>
                                        <TextBox x:Name="HidePanelsHotkeyInput"
                                                 Grid.Row="0"
                                                 Grid.Column="1"
                                                 Height="30"
                                                 Style="{StaticResource FlatTextBox}"
                                                 IsReadOnly="True"
                                                 FontFamily="Consolas"
                                                 VerticalContentAlignment="Center"
                                                 PreviewKeyDown="GlobalHotkeyInput_PreviewKeyDown"/>
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="2"
                                                   Text="{DynamicResource Loc.ShortcutHideAllPanels}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   Margin="8,2,0,2"/>

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Text="{DynamicResource Loc.ShortcutsInputForeground}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   Margin="0,10,8,2"/>
                                        <TextBox x:Name="ForegroundPanelsHotkeyInput"
                                                 Grid.Row="1"
                                                 Grid.Column="1"
                                                 Height="30"
                                                 Margin="0,8,0,0"
                                                 Style="{StaticResource FlatTextBox}"
                                                 IsReadOnly="True"
                                                 FontFamily="Consolas"
                                                 VerticalContentAlignment="Center"
                                                 PreviewKeyDown="GlobalHotkeyInput_PreviewKeyDown"/>
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="2"
                                                   Text="{DynamicResource Loc.ShortcutTemporaryForeground}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   Margin="8,10,0,2"/>

                                        <StackPanel Grid.Row="2"
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Margin="0,10,0,0">
                                            <Button Content="{DynamicResource Loc.ShortcutsApply}"
                                                    Style="{StaticResource PrimaryButton}"
                                                    Padding="12,6"
                                                    Click="ApplyGlobalShortcuts_Click"/>
                                            <Button Content="{DynamicResource Loc.ShortcutsReset}"
                                                    Style="{StaticResource GhostButton}"
                                                    Margin="8,0,0,0"
                                                    Padding="10,6"
                                                    Click="ResetGlobalShortcuts_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="{DynamicResource Loc.ShortcutsExistingTitle}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               Margin="0,14,0,6"/>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Delete" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{DynamicResource Loc.ShortcutDeleteSelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Ctrl + C" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{DynamicResource Loc.ShortcutCopySelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Ctrl + X" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{DynamicResource Loc.ShortcutCutSelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Ctrl + V" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{DynamicResource Loc.ShortcutPasteSelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Ctrl + Mouse Wheel" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{DynamicResource Loc.ShortcutPanelZoom}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ctrl/Alt + Click" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{DynamicResource Loc.ShortcutAdditiveSelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Shift + Click" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{DynamicResource Loc.ShortcutRangeSelection}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Shift + Right Click" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{DynamicResource Loc.ShortcutClassicContextMenu}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="8" Grid.Column="0" Text="Ctrl + Drag" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="8" Grid.Column="1" Text="{DynamicResource Loc.ShortcutDragCopy}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="9" Grid.Column="0" Text="Shift + Drag" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="9" Grid.Column="1" Text="{DynamicResource Loc.ShortcutDragMove}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="10" Grid.Column="0" Text="Ctrl + Shift + Drag" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="10" Grid.Column="1" Text="{DynamicResource Loc.ShortcutDragLink}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Esc" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="11" Grid.Column="1" Text="{DynamicResource Loc.ShortcutTrayClose}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>

                                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Double Click Resize Grip" FontFamily="Consolas" FontSize="12" Foreground="#D7E2F2" Margin="0,2,8,2"/>
                                        <TextBlock Grid.Row="12" Grid.Column="1" Text="{DynamicResource Loc.ShortcutFitContent}" Foreground="{StaticResource Muted}" FontSize="12" Margin="0,2,0,2"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </ScrollViewer>

        <Popup x:Name="ColorPickerPopup"
               AllowsTransparency="True"
               StaysOpen="False"
               Placement="Bottom"
               PopupAnimation="Fade"
               HorizontalOffset="-150">
            <local:ColorPickerPopup x:Name="ColorPicker"/>
        </Popup>
    </Grid>
</Window>



