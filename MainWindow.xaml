<Window x:Class="DesktopPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Desktop+"
        Height="720"
        Width="1120"
        MinHeight="680"
        MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="{DynamicResource AppBackgroundBrush}"
        FontFamily="Segoe UI"
        Loaded="MainWindow_Loaded">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#242833"/>
        <SolidColorBrush x:Key="CardBorder" Color="#323844"/>
        <SolidColorBrush x:Key="InputBackground" Color="#1F242E"/>
        <SolidColorBrush x:Key="InputBorder" Color="#2D3442"/>
        <SolidColorBrush x:Key="Primary" Color="#6E8BFF"/>
        <SolidColorBrush x:Key="PrimaryDarker" Color="#5B77E2"/>
        <SolidColorBrush x:Key="Muted" Color="#A7B0C0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F2F5FA"/>
        <SolidColorBrush x:Key="TabAccent" Color="#E2C36B"/>
        <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1E232B" Offset="0"/>
            <GradientStop Color="#171A20" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="FlatTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                Background="{StaticResource InputBackground}"
                                BorderBrush="{StaticResource InputBorder}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="2"
                                          Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="Bd" Property="Background" Value="#262C37"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FlatCombo" TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="Bd"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    SnapsToDevicePixels="True"/>
                            <ContentPresenter Grid.Column="0"
                                              Margin="10,4"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Content="{TemplateBinding SelectionBoxItem}"/>
                            <ToggleButton Grid.Column="1"
                                          x:Name="Toggle"
                                          Style="{x:Null}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False">
                                <Path Data="M 0 0 L 8 0 L 4 4 Z"
                                      Stretch="Uniform"
                                      Fill="{StaticResource TextPrimary}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5"/>
                            </ToggleButton>
                            <Popup x:Name="Popup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Focusable="False">
                                <Border Background="{StaticResource InputBackground}"
                                        BorderBrush="{StaticResource InputBorder}"
                                        BorderThickness="1"
                                        CornerRadius="10"
                                        Padding="4">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="Bd" Property="Background" Value="#262C37"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#242A34"/>
            <Setter Property="BorderBrush" Value="#353C49"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Primary}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource GhostButton}">
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryDarker}"/>
        </Style>

        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#2A303A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#343B48"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,4,0,4">
                            <Border x:Name="Box"
                                    Width="18" Height="18"
                                    CornerRadius="4"
                                    Background="#1E232B"
                                    BorderBrush="#3A414E"
                                    BorderThickness="1"
                                    Margin="0,0,8,0">
                                <Path x:Name="Check"
                                      Data="M 3 9 L 7 13 L 15 5"
                                      Stroke="{StaticResource Primary}"
                                      StrokeThickness="2.2"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource Primary}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="#2D3750"/>
                                <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Box" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" Background="#1E232B">
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Background="#3A414E"
                                           BorderBrush="{StaticResource Primary}"
                                           BorderThickness="0">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="5"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollContentPresenter Grid.Row="0" Grid.Column="0"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Row="0" Grid.Column="1" Orientation="Vertical" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                            <ScrollBar x:Name="PART_HorizontalScrollBar" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PillTabItem" TargetType="TabItem">
            <Setter Property="Foreground" Value="#B8C1D1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                SnapsToDevicePixels="True">
                            <ContentPresenter ContentSource="Header"
                                              RecognizesAccessKey="True"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#272C36"/>
                                <Setter Property="Foreground" Value="#EAF0FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bg" Property="Background" Value="#2A313D"/>
                                <Setter TargetName="Bg" Property="BorderBrush" Value="{StaticResource TabAccent}"/>
                                <Setter TargetName="Bg" Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentSlider" TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource Primary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="2">
                            <Track x:Name="PART_Track"
                                   Height="16"
                                   VerticalAlignment="Center"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Background="{StaticResource Primary}"
                                                  BorderBrush="{StaticResource PrimaryDarker}"
                                                  BorderThickness="0"
                                                  Height="6"
                                                  VerticalAlignment="Center">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"
                                                        Height="{TemplateBinding Height}"
                                                        VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Background="#2A303A"
                                                  BorderThickness="0"
                                                  Height="6"
                                                  VerticalAlignment="Center">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="3"
                                                        Height="{TemplateBinding Height}"
                                                        VerticalAlignment="Center"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16" Background="White" BorderBrush="{StaticResource Primary}" BorderThickness="2">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="{TemplateBinding Width}"
                                                        Height="{TemplateBinding Height}"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8"
                                                        Opacity="0.95"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="TabStripPlacement" Value="Top"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#1F242C"
                                    BorderBrush="#2F3643"
                                    BorderThickness="1"
                                    CornerRadius="14"
                                    Padding="3"
                                    Margin="0,0,0,12"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    SnapsToDevicePixels="True"
                                    ClipToBounds="True">
                                <TabPanel x:Name="HeaderPanel"
                                          IsItemsHost="True"
                                          Background="Transparent"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Grid.Row="1"
                                              x:Name="PART_SelectedContentHost"
                                              ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            CornerRadius="10"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="6"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#1F242C"
                BorderBrush="#2B313D"
                BorderThickness="0,0,0,1"
                Padding="8,0"
                shell:WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid Height="36">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image Width="14"
                           Height="14"
                           Margin="2,0,6,0"
                           Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"/>
                    <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,2,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="False">
                    <Button Style="{StaticResource TitleBarButton}"
                            Click="Minimize_Click"
                            shell:WindowChrome.IsHitTestVisibleInChrome="False">
                        <Path Stroke="{StaticResource TextPrimary}"
                              StrokeThickness="1.6"
                              Data="M 0 0 L 10 0"
                              Stretch="Uniform"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButton}"
                            Click="MaximizeRestore_Click"
                            Margin="4,0,0,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="False">
                        <Path Stroke="{StaticResource TextPrimary}"
                              StrokeThickness="1.4"
                              Data="M 0 0 H 10 V 10 H 0 Z"
                              Stretch="Uniform"
                              Fill="Transparent"/>
                    </Button>
                    <Button Style="{StaticResource TitleBarButton}"
                            Click="Close_Click"
                            Margin="4,0,0,0"
                            shell:WindowChrome.IsHitTestVisibleInChrome="False">
                        <Path Stroke="White"
                              StrokeThickness="1.6"
                              Data="M 0 0 L 10 10 M 10 0 L 0 10"
                              Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <TabControl Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,0,12"
                            ItemContainerStyle="{StaticResource PillTabItem}">

                    <TabItem Header="{DynamicResource Loc.TabGeneral}">
                        <StackPanel Margin="0,12,0,0">
                            <Border Background="{StaticResource CardBackground}"
                                    CornerRadius="12"
                                    Padding="16"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="{DynamicResource Loc.GeneralTitle}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                   Text="{DynamicResource Loc.GeneralLanguageLabel}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox x:Name="LanguageCombo"
                                                  Grid.Row="0" Grid.Column="1"
                                                  Height="34"
                                                  Style="{StaticResource FlatCombo}"
                                                  Margin="0,0,0,8"
                                                  SelectedValuePath="Tag"
                                                  SelectionChanged="LanguageCombo_SelectionChanged">
                                            <ComboBoxItem Content="{DynamicResource Loc.LanguageGerman}" Tag="de"/>
                                            <ComboBoxItem Content="{DynamicResource Loc.LanguageEnglish}" Tag="en"/>
                                        </ComboBox>

                                        <CheckBox x:Name="StartupToggle"
                                                  Grid.Row="1" Grid.ColumnSpan="2"
                                                  Content="{DynamicResource Loc.GeneralStartupCheckbox}"
                                                  Style="{StaticResource AccentCheckBox}"
                                                  Margin="0,4,0,8"
                                                  Checked="StartupToggle_Changed"
                                                  Unchecked="StartupToggle_Changed"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0"
                                                   Text="{DynamicResource Loc.GeneralCloseLabel}"
                                                   Foreground="{StaticResource Muted}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox x:Name="CloseBehaviorCombo"
                                                  Grid.Row="2" Grid.Column="1"
                                                  Height="34"
                                                  Style="{StaticResource FlatCombo}"
                                                  SelectedValuePath="Tag"
                                                  SelectionChanged="CloseBehaviorCombo_SelectionChanged">
                                            <ComboBoxItem Content="{DynamicResource Loc.CloseBehaviorMinimize}" Tag="Minimize"/>
                                            <ComboBoxItem Content="{DynamicResource Loc.CloseBehaviorExit}" Tag="Exit"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="{DynamicResource Loc.TabPanels}">
                        <StackPanel Margin="0,12,0,0">
                            <Border Background="{StaticResource CardBackground}"
                                    CornerRadius="12"
                                    Padding="16"
                                    BorderBrush="{StaticResource CardBorder}"
                                    BorderThickness="1">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{DynamicResource Loc.PanelsTitle}"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                            <Border Background="{StaticResource Primary}"
                                                    CornerRadius="8"
                                                    Padding="8,3"
                                                    Margin="10,0,0,0">
                                                <TextBlock x:Name="PanelOverviewCount"
                                                           Text="0"
                                                           FontSize="12"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="{DynamicResource Loc.PanelsNew}"
                                                Style="{StaticResource PrimaryButton}"
                                                Padding="12,6"
                                                Click="OpenDesktopPanel_Click"/>
                                    </Grid>
                                    <TextBlock Text="{DynamicResource Loc.PanelsDesc}"
                                               FontSize="12"
                                               Foreground="{StaticResource Muted}"
                                               Margin="0,8,0,10"/>

                                    <ListBox x:Name="PanelOverviewList"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="White">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#1E232B"
                                                        CornerRadius="10"
                                                        BorderBrush="{StaticResource CardBorder}"
                                                        BorderThickness="1"
                                                        Padding="10"
                                                        Margin="0,0,0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="260"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Title}"
                                                                       FontWeight="SemiBold"
                                                                       FontSize="14"
                                                                       Foreground="White"
                                                                       Cursor="Hand"
                                                                       Tag="{Binding}"
                                                                       MouseLeftButtonDown="PanelTitle_MouseLeftButtonDown"/>
                                                            <TextBlock Text="{Binding Folder}"
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource Muted}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       Margin="0,2,0,0"/>
                                                            <TextBlock Text="{Binding State}"
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource Primary}"
                                                                       Margin="0,4,0,0"/>
                                                        </StackPanel>
                                                        <StackPanel Grid.Column="1"
                                                                    Orientation="Horizontal"
                                                                    HorizontalAlignment="Right">
                                                            <ComboBox x:Name="PanelPresetCombo"
                                                                      Width="140"
                                                                      Style="{StaticResource FlatCombo}"
